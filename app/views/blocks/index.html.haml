          %div.act_desc 　ランキングレート、RP
    %tbody.closed
      %tr
        %td.indent
        %td= f.label :ranking_rate_form, 'ランキングレート'
        %td.formNum= text_field_tag :ranking_rate_form, @ranking_rate_form
        %td= f.label :rp_form, 'RP'
        %td.formNum= text_field_tag :rp_form, @rp_form
    %tbody.tbody_toggle.pointer
      %tr
        %td{colspan: "5"}
          = hidden_field_tag :base_first, @base_first
          = hidden_field_tag :show_detail_reward_1, @show_detail_reward_1
