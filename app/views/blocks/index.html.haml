        %td= f.label :partnership_form, '姉妹提携キャラクター名'
        %td.formText= text_field_tag :partnership_name_form, @partnership_name_form
      %tr
        %td.indent
        %td{:colspan => "4"}
          = check_box_tag :show_partnership_name, @show_partnership_name, @show_partnership_name
          = label_tag :show_partnership_name, '姉妹提携キャラ名を表示する'
    %tbody.tbody_toggle.pointer
      %tr
        %td{colspan: "5"}
