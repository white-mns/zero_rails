%br

%table.table.table-striped.table-bordered.table-hover
  %thead
    %tr
      %th= sort_link(@search, :result_no,'更新回', default_order: :desc)
      %th= sort_link(@search, :e_no,'キャラクター(Eno)', default_order: :desc)
      %th.sep= sort_link(@search, :block_no, 'ブロック', default_order: :desc)
      - if @show_detail_status_1 == "1"
        %th.sep= sort_link(@search, :status_ranking_rate, 'レート', default_order: :desc)
        %th= sort_link(@search, :status_rp, 'RP', default_order: :desc)
      - if @show_detail_reward_1 == "1"
        %th.sep= sort_link(@search, :total_value, '合計収入', default_order: :desc)
        %th= sort_link(@search, :attack_value, '攻撃', default_order: :desc)
        %th= sort_link(@search, :support_value, '支援', default_order: :desc)
        %th= sort_link(@search, :defense_value, '防衛', default_order: :desc)
      - if @show_detail_regalia_1 == "1"
        %th.sep= sort_link(@search, :regalia_regalia_name, 'レガリア', default_order: :desc)
      - if @show_detail_intention_1 == "1"
        %th.sep= sort_link(@search, :intention_intention_name, '意思', default_order: :desc)
      - if @show_detail_partnership_1 == "1"
        %th.sep= sort_link(@search, :partnership_partner_e_no, '姉妹提携', default_order: :desc)
      - if @show_detail_spec_1 == "1"
        %th.sep= sort_link(@search, :spec_invation, '侵攻速度', default_order: :desc)
        %th= sort_link(@search, :spec_encount, 'エンカウント', default_order: :desc)
        %th= sort_link(@search, :spec_technic, '機巧技術', default_order: :desc)
        %th= sort_link(@search, :spec_goodwill, '好感度', default_order: :desc)
        %th= sort_link(@search, :spec_intelligence, '知性', default_order: :desc)
        %th= sort_link(@search, :spec_drink, '送品酔い', default_order: :desc)
        %th= sort_link(@search, :spec_illegality, '違法性', default_order: :desc)
      - if @show_detail_condition_1 == "1"
        %th.sep{style: "min-width:25rem"}= sort_link(@search, :condition_all_text_condition_text, '城状況', default_order: :desc)
      %th.sep{colspan: "2"} 結果リンク
  %tbody
    - @blocks.each do |block|
      %tr
        %td{rowspan: "#{ '2' if @show_all_assembly }" }= block.result_no
        %td{rowspan: "#{ '2' if @show_all_assembly }" }= pc_name_text(block.e_no, block.pc_name)
        %td.sep{rowspan: "#{ '2' if @show_all_assembly }" }= block.block_no
        - if @show_detail_status_1 == "1"
          %td.sep= block.status.ranking_rate if block.status
          %td= block.status.rp if block.status
        - if @show_detail_reward_1 == "1"
          %td.sep= block.total.value.round() if block.total
          %td= block.attack.value if block.attack
          %td= block.support.value if block.support
          %td= block.defense.value if block.defense
        - if @show_detail_regalia_1 == "1"
          %td.sep= block.regalia.regalia.name if block.regalia && block.regalia.regalia
        - if @show_detail_intention_1 == "1"
          %td.sep= block.intention.intention.name if block.intention && block.intention.intention
        - if @show_detail_partnership_1 == "1"
          - if @show_partnership_name == "on"
            %td.sep= pc_name_text(block.partnership.partner_e_no, block.partnership.partnership) if block.partnership && block.partnership.partnership
          - else
            %td.sep= block.partnership.partner_e_no if block.partnership
        - if @show_detail_spec_1 == "1"
          %td= block.spec.invation     if block.spec
          %td= block.spec.encount      if block.spec
          %td= block.spec.technic      if block.spec
          %td= block.spec.goodwill     if block.spec
          %td= block.spec.intelligence if block.spec
          %td= block.spec.drink        if block.spec
          %td= block.spec.illegality   if block.spec
        - if @show_detail_condition_1 == "1"
          %td.sep= all_condition_text(block.spec.condition)
        %td.sep= character_link(block.e_no)
        %td= character_old_link(@last_result, block.e_no, block.result_no, block.generate_no)
      -if @show_all_assembly
        %tr
          %td{colspan: 100}= all_assembly_text(block.assembly)
= paginate(@blocks)
