        %td{:colspan => "4"}
          = check_box_tag :show_all_assembly, @show_all_assembly, @show_all_assembly
          = label_tag :show_all_assembly, '全アセンブルを表示する'
    %tbody.tbody_toggle.pointer
      %tr
        %td{colspan: "5"}
          = hidden_field_tag :base_first, @base_first
          = hidden_field_tag :show_detail_regalia_1, @show_detail_regalia_1
          - act_icon(false)
          = label_tag :show_detail_regalia_1, '　レガリアを表示する', class: "act_desc"
          = label_tag :show_detail_regalia_1, '　レガリアを非表示にする', class: "act_desc closed"
    %tbody
      %tr
        %td.indent
        %td= f.label :regalia_form, 'レガリア'
        %td.formText{:colspan => "3"}= text_field_tag :regalia_form, @regalia_form
    %tbody.tbody_toggle.pointer
      %tr
        %td{colspan: "5"}
          = hidden_field_tag :base_first, @base_first
          = hidden_field_tag :show_detail_intention_1, @show_detail_intention_1
          - act_icon(false)
          = label_tag :show_detail_intention_1, '　意思表示を表示する', class: "act_desc"
          = label_tag :show_detail_intention_1, '　意思表示を非表示にする', class: "act_desc closed"
    %tbody
      %tr
        %td.indent
        %td= f.label :intention_form, '意思表示'
        %td.formText{:colspan => "3"}= text_field_tag :intention_form, @intention_form
    %tbody.tbody_toggle.pointer
      %tr
        %td{colspan: "5"}
