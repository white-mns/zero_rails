- @page_title = "精算一覧"
%h1= @page_title

.card.desc
  .card-header
    - act_icon(true)
    検索仕様
    - act_desc(true)
  .card-body
    = render "layouts/base_desc"
    %p
      %span.example_select.example_toggle.pointer
        - help_icon
        入力例
        - act_desc(false)
    #example.closed
      = render "layouts/input_desc"
= search_form_for @search do |f|
  %table.search_toggle.table.table-striped.table-bordered.table-hover
    %tbody.pointer
      %tr
        %td{colspan: "5"}
          - act_icon(true)
          絞り込み検索
          - act_desc(true)
    %tbody
      %tr
      %tr
        %td.indent
        %td= f.label :result_no_form, '更新回'
        %td.formNum{colspan: "3"}= text_field_tag :result_no_form, @result_no_form
      %tr
        %td.indent
        %td= f.label :e_no_form, 'Eno'
        %td.formNum= text_field_tag :e_no_form, @e_no_form
      %tr
        %td.indent
        %td= f.label :pc_name_form, 'キャラクター名'
        %td.formText= text_field_tag :pc_name_form, @pc_name_form
      %tr
        %td.indent
        %td= f.label :reward_type_form, '戦果'
        %td.formText= text_field_tag :reward_type_form, @reward_type_form
      %tr
        %td.indent
        %td= f.label :value_form, '値'
        %td.formNum= text_field_tag :value_form, @value_form
      %tr
        %td.indent
        %td.indent= hidden_field_tag :is_form, 1
        %td{colspan: "3"}
          - search_submit_button


= paginate(@rewards)
%br
ヒット数：#{ @count }件
%br
%br

%table.table.table-striped.table-bordered.table-hover
  %thead
    %tr
      %th= sort_link(@search, :result_no,'更新回', default_order: :desc)
      %th= sort_link(@search, :e_no,'キャラクター(Eno)', default_order: :desc)
      %th= sort_link(@search, :reword_name, '戦果', default_order: :desc)
      %th= sort_link(@search, :value, '値', default_order: :desc)
      %th{colspan: "2"} 結果リンク
  %tbody
    - @rewards.each do |reward|
      %tr
        %td= reward.result_no
        %td= pc_name_text(reward.e_no, reward.pc_name)
        %td= reward.reward.name if reward.reward
        %td= reward.value
        %td= character_link(reward.e_no)
        %td= character_old_link(@last_result, reward.e_no, reward.result_no, reward.generate_no)
= paginate(@rewards)
